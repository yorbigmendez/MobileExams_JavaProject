<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamDetailFragment"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Exam Information"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Exam Name: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <EditText
                    android:id="@+id/txtExamName"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:width="200dp"
                    android:hint="Exam #1"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Created by: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtExamAuthor"
                    android:layout_marginLeft="5dp"
                    android:width="200dp"
                    android:hint="Author #1"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Exam points: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtExamPoints"
                    android:layout_marginLeft="5dp"
                    android:width="200dp"
                    android:hint="Exam Points"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <TableLayout
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:paddingLeft="160dp"
            android:paddingRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >
            <ImageButton
                android:id="@+id/btnSave"
                android:src="@drawable/icon_save"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:background="#FFFFFF"
                android:visibility="invisible"/>
        </TableRow>
        <TableRow
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <ImageButton
                android:id="@+id/btnSettings"
                android:src="@drawable/icon_settings"
                android:background="#FFFFFF"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/btnSection"
                android:src="@drawable/icon_question"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:background="#FFFFFF"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:src="@drawable/icon_delete"
                android:layout_marginLeft="20dp"
                android:background="#FFFFFF"
                android:clickable="true"/>

        </TableRow>
        <TableRow
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:background="#FFFFFF"
                android:text="Edit Info"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:text="Question List"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="Delete Section"
                android:background="#FFFFFF"/>

        </TableRow>

        <TableRow
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluate this Exam"
                android:layout_span="3"
                android:onClick="ButtonOnClick"
                />
        </TableRow>
    </TableLayout>

</FrameLayout>
